generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  hash      String
  username  String
  tag       String?
  deeds     Deed[]

  @@map("users")
}

model Deed {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  checked   Boolean  @default(false)
  text      String

  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@map("deeds")
}
